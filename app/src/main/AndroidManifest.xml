<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.solution_challenge.candiformation">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.solution_challenge.candiformation.CandiApplication"
        android:windowSoftInputMode="adjustResize"
        android:allowBackup="true"
        android:icon="@mipmap/ic_candiformation_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_candiformation_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Candiformation"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.solution_challenge.candiformation.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Candiformation.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>